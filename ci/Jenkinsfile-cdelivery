pipeline {
   agent any

   stages {
      stage('Build & Test') {
         steps {
            git 'https://<GITHUB_TOKEN>@github.com/newtonbeck/curso-devops.git'

            sh "mvn clean package"
            
            sh 'scp -o StrictHostKeyChecking=no -i /infra/ssh-keys/id_rsa target/alura-forum-0.0.1-SNAPSHOT.war vagrant@192.168.50.12:/infra/ssh-keys/alura-forum.war'
            
            sh "ssh -o StrictHostKeyChecking=no -i /infra/ssh-keys/id_rsa vagrant@192.168.50.12 'sudo mv /infra/ssh-keys/alura-forum.war /var/lib/tomcat8/webapps/alura-forum.war'"
         }
      }
   }
   
    post {
        success {
            archiveArtifacts 'target/*.war'
        }
    }
}